#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
  behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping_term_ms = <175>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };
    };
        
	
	keymap {
		compatible = "zmk,keymap";

		default_layer {
			bindings = <
	&kp ESC  &kp Q &kp W &kp E &kp R &kp T                                                               &kp Y         &kp U          &kp I    &kp O   &kp P    &kp BSLH
	&kp TAB  &kp A &kp S &kp D &kp F &kp G                                                               &kp H         &kp J          &kp K    &kp L   &kp SCLN &kp QUOT
	&kp LCTL &kp Z &kp X &kp C &kp V &kp B         &mo LAYER_TEXT &kp RET        &kp DEL  &mo LAYER_TEXT &kp N         &kp M          &kp CMMA &kp DOT &kp FSLH &kp LCTL 
	               &kp LGUI &kp LBKT &mt LALT RBKT &mt LSFT SPC   &kp RET        &kp BKSP &mt RSFT SPC   &mt RALT GRAV &mo LAYER_NUMS &kp RGUI
			>;
		};

		nums_layer {
			bindings = <
	&kp GRAV &kp NUM_1 &kp NUM_2 &kp NUM_3 &kp NUM_4 &kp NUM_5                                           &kp NUM_6  &kp NUM_7  &kp NUM_8    &kp NUM_9   &kp NUM_0    &kp MINUS  
